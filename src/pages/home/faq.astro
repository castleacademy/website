---
import { ArrowRightIcon } from "lucide-react";
import { AccordionFAQ } from "./components/_faq";
import { Button } from "~/components/ui/button";
import FaqBackground from "~/components/background/faq-background.astro";
---

<section class="relative w-full h-[566px] lg:h-[566px] overflow-hidden">
  <FaqBackground />
  
  <div class="container relative z-10">
  <div class="flex items-center justify-center flex-col py-26">
    <div class="mb-12 flex flex-col items-center text-center">
      <h2 class="text-xl sm:text-2xl lg:text-3xl font-bold">
        Frequently Asked Questions
      </h2>
      <p class="text-sm sm:text-base lg:text-xl">
        Semua yang perlu kamu tahu sebelum memulai perjalanan belajarmu
      </p>
    </div>
    <AccordionFAQ client:load />
    <a class="mt-6" href="/bantuan">
      <Button variant="embossed">
        <span class="-translate-y-0.25"> Pusat Bantuan </span>
        <ArrowRightIcon />
      </Button>
    </a>
  </div>
  </div>
</section>
