---
// FAQ Background Component
// Uses SVG backgrounds for desktop and mobile
---

<div class="absolute inset-0 overflow-hidden">
  <!-- Desktop Background -->
  <div class="hidden lg:block absolute inset-0 w-full h-full">
    <img 
      src="/src/assets/faq-desktop.svg" 
      alt="FAQ Background Desktop"
      class="w-full h-full object-cover"
    />
  </div>
  
  <!-- Mobile Background -->
  <div class="block lg:hidden absolute inset-0 w-full h-full">
    <img 
      src="/src/assets/faq-mobile.svg" 
      alt="FAQ Background Mobile"
      class="w-full h-full object-cover"
    />
  </div>
</div>
