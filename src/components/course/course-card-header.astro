---
export interface Props {
  title: string;
  badge?: string;
  badgeVariant?: "default" | "popular" | "new" | "sale";
  class?: string;
}

const { 
  title, 
  badge, 
  badgeVariant = "default",
  class: className = "" 
} = Astro.props;

const badgeClasses = {
  default: "border-neutral-500 text-neutral-600",
  popular: "border-secondary-600 text-secondary-600",
  new: "border-tertiary-500 text-tertiary-600",
  sale: "border-secondary-500 text-secondary-600"
};
---

<div class={`border-b pb-2 mb-2 flex items-center justify-between ${className}`}>
  <h3 class="text-base lg:text-lg font-semibold text-secondary-600">{title}</h3>
  {badge && (
    <p class={`text-sm border-2 font-semibold px-2 py-1 items-center justify-center rounded hidden md:flex ${badgeClasses[badgeVariant]}`}>
      <span class="-translate-y-0.25">{badge}</span>
    </p>
  )}
</div>
