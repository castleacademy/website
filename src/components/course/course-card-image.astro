---
export interface Props {
  src?: string;
  alt?: string;
  class?: string;
  placeholder?: string;
}

const { 
  src, 
  alt = "Course image", 
  class: className = "",
  placeholder = "Castle Academy"
} = Astro.props;
---

<div class={`aspect-square lg:min-w-38 bg-secondary-200 mr-5 flex items-center justify-center rounded-[8px] ${className}`}>
  {src ? (
    <img src={src} alt={alt} class="w-full h-full object-cover" />
  ) : (
    <span class="text-secondary-600 text-sm font-medium">{placeholder}</span>
  )}
</div>
