---
export interface Props {
  courseId: string;
  courseName: string;
  courseDescription?: string;
}

const { courseId, courseName, courseDescription = "Detail informasi kursus akan ditampilkan di sini" } = Astro.props;
---

<dialog id={`dialog-${courseId}`} class="backdrop:bg-black/50 bg-white rounded-lg p-6 max-w-md top-0 right-0 bottom-0 left-0 m-auto">
  <div class="flex flex-col gap-4">
    <div class="flex justify-between items-start">
      <h2 class="text-lg font-semibold">{courseName}</h2>
      <button onclick={`document.getElementById('dialog-${courseId}').close()`} class="text-gray-500 hover:text-gray-700">
        âœ•
      </button>
    </div>
    <p class="text-sm text-gray-600">
      {courseDescription}
    </p>
    <div class="py-4">
      <slot />
    </div>
    <div class="flex justify-end gap-2">
      <button 
        onclick={`document.getElementById('dialog-${courseId}').close()`}
        class="px-4 py-2 border border-gray-300 rounded-md hover:bg-gray-50"
      >
        Batal
      </button>
      <button class="px-4 py-2 bg-primary-600 text-white rounded-md hover:bg-primary-700">
        Daftar Sekarang
      </button>
    </div>
  </div>
</dialog>
