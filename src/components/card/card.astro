---
export interface Props {
  class?: string;
  title?: string;
  content?: string;
  imageSrc?: string;
  imageAlt?: string;
  placeholder?: string;
}

const { 
  class: className = "", 
  title, 
  content, 
  imageSrc,
  imageAlt = "Card image",
  placeholder = "Castle Academy"
} = Astro.props;
---

<div class={`flex flex-col gap-4 w-full h-full p-3 rounded-2xl bg-white shadow-[0_4px_4px_2px_rgba(0,0,0,0.20)] overflow-hidden ${className}`}>
  <!-- Image/Graphic Area -->
  <div class="bg-blue-50 flex justify-center items-center min-h-[140px] rounded-[8px] aspect-[284/194]">
    {imageSrc ? (
      <img src={imageSrc} alt={imageAlt} class="w-full h-full object-cover rounded-lg" />
    ) : (
      <div class="w-full h-full bg-blue-50 flex items-center justify-center rounded-lg border-2 border-dashed border-blue-600">
        <span class="text-blue-600 text-sm font-medium text-center">{placeholder}</span>
      </div>
    )}
  </div>
  
  <!-- Content Area -->
  <div class="flex flex-col mb-10">
    <h3 class="text-lg font-bold text-blue-600 m-0 leading-tight text-left">{title}</h3>
    <p class="text-sm text-gray-800 m-0 leading-snug text-left">{content}</p>
  </div>
</div>
