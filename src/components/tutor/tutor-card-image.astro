---
export interface Props {
  src?: string;
  alt?: string;
  class?: string;
  placeholder?: string;
}

const { 
  src, 
  alt = "Tutor image", 
  class: className = "",
  placeholder = "Tutor"
} = Astro.props;
---

<div class={`relative h-80 rounded-t-2xl overflow-hidden ${className}`}>
  {src ? (
    <img 
      src={src} 
      alt={alt} 
      class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105" 
    />
  ) : (
    <div class="w-full h-full bg-gray-200 flex items-center justify-center">
      <span class="text-gray-600 text-lg font-medium">{placeholder}</span>
    </div>
  )}
</div>
